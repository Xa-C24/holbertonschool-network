#!/usr/bin/env bash
# This script modifies the /etc/hosts file to update the resolutions for localhost and facebook.com.

# Check if the script is executed with sudo
if [ "$(id -u)" -ne 0 ]; then
  echo "This script must be run as root. Use sudo."
  exit 1
fi

# Backup the current /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Remove any existing entries for localhost and facebook.com
sed -i '/127\.0\.0\.2\s\+localhost/d' /etc/hosts
sed -i '/8\.8\.8\.8\s\+facebook\.com/d' /etc/hosts

# Add the new resolutions
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "The /etc/hosts file has been updated:"
cat /etc/hosts
