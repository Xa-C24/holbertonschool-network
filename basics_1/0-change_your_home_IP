#!/usr/bin/env bash
# This script modifies the /etc/hosts file to change the resolution of localhost and facebook.com

# Backup the current /etc/hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Update /etc/hosts with the new resolutions
sudo sed -i '/127.0.0.1\s*localhost/d' /etc/hosts
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null

echo "The /etc/hosts file has been updated:"
cat /etc/hosts
